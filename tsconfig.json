{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "#*": ["src/*"]
    },
    "typeRoots": ["./src/Types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
